<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<display-name>CityManageWeb</display-name>
	<welcome-file-list>
	    <welcome-file>index.html</welcome-file>
	    <welcome-file>index.htm</welcome-file>
	    <welcome-file>index.jsp</welcome-file>
	    <welcome-file>default.html</welcome-file>
	    <welcome-file>default.htm</welcome-file>
	    <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
  	
  	<!-- DATABASE Connection Setting -->
	<listener>
    	<listener-class>jdbc.DBCPInitListener</listener-class>
	</listener>
  
  	<!-- DATABASE value Setting -->
	<context-param>
    	<param-name>poolConfig</param-name>
    	<param-value>
  			jdbcDriver=com.mysql.jdbc.Driver
			jdbcUrl=jdbc:mysql://192.168.0.155:3306/citymanage?characterEncoding=utf8&amp;zeroDateTimeBehavior=convertToNull
			<!--jdbcUrl=jdbc:mysql://125.128.8.113:3306/citymanage?characterEncoding=utf8&amp;zeroDateTimeBehavior=convertToNull -->
  			dbUser=citymanage
			dbPass=sjj
			validationQuery=select 1
			minIdle=3
			maxTotal=30
			poolName=citymanage
  		</param-value>
	</context-param>
	
		<!-- character Setting -->
	<filter>
	<filter-name>encodingFilter</filter-name>
	<filter-class>util.CharacterEncodingFilter</filter-class>
	<init-param>
		<param-name>encoding</param-name>
		<param-value>utf-8</param-value>
	</init-param>
	</filter>
  
    <filter-mapping>
    	<filter-name>encodingFilter</filter-name>
    	<url-pattern>/*</url-pattern>
 	</filter-mapping>
 	
  <!-- URI Setting -->
  	<servlet>
	    <servlet-name>ControllerUsingURI</servlet-name>
	    <servlet-class>mvc.controller.ControllerUsingURI</servlet-class>
	    <init-param>
	      <param-name>configFile</param-name>
	      <param-value>/WEB-INF/commandHandlerURI.properties</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
  	</servlet>
  
	 <servlet-mapping>
	    <servlet-name>ControllerUsingURI</servlet-name>
	    <url-pattern>*.do</url-pattern>
	 </servlet-mapping>
	 
  <!-- API Setting -->	 
	 <servlet>
	    <servlet-name>ControllerUsingAPI</servlet-name>
	    <servlet-class>mvc.controller.ControllerUsingAPI</servlet-class>
	    <init-param>
	      <param-name>configFile</param-name>
	      <param-value>/WEB-INF/commandHandlerAPI.properties</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
  	</servlet>
  
	 <servlet-mapping>
	    <servlet-name>ControllerUsingAPI</servlet-name>
	    <url-pattern>*.app</url-pattern>
	 </servlet-mapping>

  <!-- API Setting -->	 
	 <servlet>
	    <servlet-name>ControllerUsingAJAX</servlet-name>
	    <servlet-class>mvc.controller.ControllerUsingAJAX</servlet-class>
	    <init-param>
	      <param-name>configFile</param-name>
	      <param-value>/WEB-INF/commandHandlerAJAX.properties</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
  	</servlet>
  
	 <servlet-mapping>
	    <servlet-name>ControllerUsingAJAX</servlet-name>
	    <url-pattern>*.ajax</url-pattern>
	 </servlet-mapping>
</web-app>